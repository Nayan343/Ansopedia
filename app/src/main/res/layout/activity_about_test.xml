<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-30dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>

        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-80dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="verdana"
            android:gravity="center"
            android:text=""
            android:textColor="@color/cardview_dark_background"
            android:textSize="30dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/aboutTest_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/about_test_bg"
            android:orientation="vertical">


            <TextView
                android:id="@+id/aboutTest_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="About Test"
                android:textAlignment="center"
                android:textColor="@color/editText_bg"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/abtHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aboutTest_heading"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Quiz of JAVA Programming"
                android:textAlignment="center"
                android:textColor="#171717"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aboutTest_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/abtHeading"
                android:fontFamily="@font/poppins_regular"
                android:padding="10dp"
                android:text="Whether you have a question, suggestion, orneed any solution, our team is ready to help you."
                android:textAlignment="center"
                android:textColor="#3F3F3F"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/point_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/aboutTest_desc"
                android:layout_marginHorizontal="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/desc_point_bg">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/round_directions" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Score : 20 marks"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/point_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/point_1"
                android:layout_marginHorizontal="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/desc_point_bg">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/round_directions" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Time : 30 mins"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/point_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/point_2"
                android:layout_marginHorizontal="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/desc_point_bg">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/round_directions" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Questions : 20"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/point_4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/point_3"
                android:layout_marginHorizontal="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/desc_point_bg">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/round_directions" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Hosted by : Ansopedia"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutTest_container"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginBottom="21dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:text="Start Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>