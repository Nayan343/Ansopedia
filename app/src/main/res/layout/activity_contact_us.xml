<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-30dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>


        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-80dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="verdana"
            android:gravity="center"
            android:text="Contact Us"
            android:textColor="@color/cardview_dark_background"
            android:textSize="30dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/layout_border">

            <TextView
                android:id="@+id/card1_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgChangeLayout"
                android:fontFamily="@font/syne"
                android:gravity="start"
                android:padding="0.5dp"
                android:text="Whether you have a question, suggestion, or
                need any solution, our team is ready to help
                you."
                android:textAlignment="center"
                android:textColor="#3F3F3F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/address2"
                android:layout_width="367dp"
                android:layout_height="111dp"
                android:layout_below="@+id/card1_course"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/editText_bg"
                android:drawablePadding="20dp"
                android:fontFamily="verdana"
                android:hint="Write your message."
                android:inputType="phone"
                android:padding="15dp"
                android:textColorHint="@color/lightWhite"
                android:textSize="18dp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="2dp" />



            <LinearLayout
                android:id="@+id/imgChangeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/addHeading"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/changeImg"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/contact_icon"
                    app:shapeAppearanceOverlay="@style/roundimageview" />

                <TextView
                    android:id="@+id/addHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgChangeLayout"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/syne"
                    android:gravity="start"
                    android:text="We'd love to hear from you"
                    android:textColor="#171717"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_address"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginBottom="21dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/syne_bold"
                android:padding="5dp"
                android:text="Send Message"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>