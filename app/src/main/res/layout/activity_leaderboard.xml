<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-30dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>

        <androidx.constraintlayout.utils.widget.MotionLabel
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-80dp"
            android:background="@drawable/ovalshape"
            android:rotation="50"
            android:text="">

        </androidx.constraintlayout.utils.widget.MotionLabel>

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="verdana"
            android:gravity="center"
            android:text=""
            android:textColor="@color/cardview_dark_background"
            android:textSize="30dp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/Leaderboard_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/about_test_bg"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Leaderboard_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Leaderboard"
                android:textAlignment="center"
                android:textColor="@color/editText_bg"
                android:textSize="22dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/TopLead"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/Leaderboard_heading"
                >

                <LinearLayout
                    android:id="@+id/Udetails_2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="-25dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Rank_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/UserImage_1"
                        android:fontFamily="@font/syne_bold"
                        android:text="2nd"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/UserImage_2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/sanjay"
                        android:layout_below="@+id/Rank_2"
                        app:shapeAppearanceOverlay="@style/rankimageview"
                        app:strokeColor="@color/contact_shape"
                        app:strokeWidth="3px"/>

                    <TextView
                        android:id="@+id/userFname_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/UserImage_1"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Sanjay"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/score_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userFname_2"
                        android:fontFamily="@font/poppins_regular"
                        android:text="893"
                        android:textAlignment="center"
                        android:textColor="@color/contact_shape"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Udetails_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:translationZ="90dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Rank_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/UserImage_1"
                        android:fontFamily="@font/syne_bold"
                        android:text="1st"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/UserImage_1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/shikat"
                        android:layout_below="@+id/Rank_1"
                        app:shapeAppearanceOverlay="@style/rankimageview"
                        app:strokeColor="@color/contact_shape"
                        app:strokeWidth="3px"/>

                    <TextView
                        android:id="@+id/userFname_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/UserImage_1"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Shikat"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/score_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userFname_1"
                        android:fontFamily="@font/poppins_regular"
                        android:text="921"
                        android:textAlignment="center"
                        android:textColor="@color/contact_shape"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Udetails_3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="-25dp"
                    android:layout_marginTop="20dp"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Rank_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/UserImage_3"
                        android:fontFamily="@font/syne_bold"
                        android:text="3rd"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/UserImage_3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/bibek"
                        android:layout_below="@+id/Rank_3"
                        app:shapeAppearanceOverlay="@style/rankimageview"
                        app:strokeColor="@color/contact_shape"
                        app:strokeWidth="3px"/>

                    <TextView
                        android:id="@+id/userFname_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/UserImage_3"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Bibek"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/score_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userFname_3"
                        android:fontFamily="@font/poppins_regular"
                        android:text="865"
                        android:textAlignment="center"
                        android:textColor="@color/contact_shape"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/point_4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/desc_point_bg">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/round_directions" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Hosted by : Ansopedia"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutTest_container"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginBottom="21dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/poppins_bold"
                android:padding="5dp"
                android:text="Start Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>