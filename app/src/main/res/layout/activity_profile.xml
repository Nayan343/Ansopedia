<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity"
    android:id="@+id/drawerlayout"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:openDrawer="start">



    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/navigationview"
        app:headerLayout="@layout/headerfile"
        app:menu="@menu/sidemenu"
        android:layout_gravity="start"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nav_layout">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/nav_layout"
                android:orientation="vertical"
                tools:ignore="MissingClass">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@color/orange"
                    app:title="Profile"
                    app:titleMarginStart="10dp"
                    app:titleTextColor="@color/white"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_baseline_avatar"
                    android:tint="@color/black"
                    app:shapeAppearance="@style/rank1imageview"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/bg_userprofile"
                    android:paddingEnd="10dp"
                    android:orientation="vertical"
                    android:paddingStart="45dp">

                    <TextView
                        android:id="@+id/nameofuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Name of User"
                        android:fontFamily="@font/verdana"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="user@gmail.com"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/nameofuser1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Name of User"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="+918799463393"
                    android:textColor="@color/black"
                    android:textSize="17sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/bg_profile"
                    android:layout_margin="20dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_profileitems"
                        android:paddingStart="20dp"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/historyicon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/history_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="History"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/profileleaderboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_profileitems"
                        android:paddingStart="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/leaderboardicon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/leaderboard_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Leaderboard"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/profilebadges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_profileitems"
                        android:paddingStart="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/badgeicon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/badge_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Badges"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/profilenotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_profileitems"
                        android:paddingStart="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/notesicon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/note_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Badges"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/bg_profile"
                    android:layout_margin="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Settings"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:id="@+id/editProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/profileicon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/profile_pic_circle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit profile"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="320dp"
                        android:layout_height="2dp"
                        android:background="#CCC1C5"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"/>
                    <LinearLayout
                        android:id="@+id/profilesetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/settingicon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/setting_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Setting"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                </LinearLayout>



        </ScrollView>
        <LinearLayout
            android:id="@+id/nav_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_bottom_nav"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:src="@drawable/home_icon" />

            <ImageView
                android:id="@+id/list"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:src="@drawable/daily_quiz" />

            <ImageView
                android:id="@+id/notification"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:src="@drawable/notification_icon" />

            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:src="@drawable/achivement_icon" />

        </LinearLayout>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>